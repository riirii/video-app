<%= render "shared/header" %>

<div class ="group-room-frame">
  <div class='chat-room-form'>
    <h1>新規グループルーム作成</h1>
    <%=form_with model: @group,url: groups_path, local: true do |f|%>
      <div class='chat-room-form__field'>
        <div class='chat-room-form__field--left'>
          <%= f.label :グループルーム名, class: 'chat-room-form__label'%>
        </div>
        <div class='chat-room-form__field--right'>
          <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'グループルーム名を入力してください'%>
        </div>
      </div>
      <div class='chat-room-form__field'>
      </div>
      <div class='chat-room-form__field'>
        <div class='chat-room-form__field--left'>
          <label class='chat-room-form__label' for='chat_room_チャットメンバー'>グループメンバー</label>
        </div>
        <div class='chat-room-form__field--right'>
          <select name="group[user_ids][]">
          <option value="">チャットするユーザーを選択してください</option>
            <% User.where.not(id: current_user.id).each do |user| %>
              <option value=<%= user.id %>><%= user.nickname %></option>
            <% end %>
          </select>
          <input name="group[user_ids][]" type="hidden" value=<%= current_user.id %>>
        </div>
      </div>
      <div class='chat-room-form__field'>
        <div class='chat-room-form__field--left'></div>
        <div class='chat-room-form__field--right'>
          <%= f.submit class: 'chat-room-form__action-btn'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
