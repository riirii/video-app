<header class='top-page-header'>
  <div class = "title">
    <h1>Transcribe</h1>
  </div>
  <div class='nav'>
    <% if user_signed_in? %>
      <ul class='status'>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li> 
        <li><%= link_to 'ログアウト',"#" , method: :delete, class: "logout" %></li> 
      </ul>
    <% else %>
      <ul class='status'>
        <li><%= link_to "#", class: "login" do %>
          <%= image_tag 'btn053_03.jpg',size:"150x30" %>
          <span class='sign-in'>ログイン</span>
        <% end %>
        </li>
        <li><%= link_to "#", class: "new" do %>
          <%= image_tag 'btn053_03.jpg',size:"150x30" %>
          <span class='sign-up'>新規登録</span>
        <% end %>
        </li>
      </ul>
    <% end %>     
  </div>
</header>